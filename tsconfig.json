{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./build/",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es2017",
    "types": [
      "node",
      "webpack-env",
      "reflect-metadata"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@expressive-tea/*": ["*"]
    },
    "declaration": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./**/*.ts",
    "./node_modules/@types/**/*.ts"
  ]
}
